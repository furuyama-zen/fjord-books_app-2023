<p style="color: green"><%= notice %></p>

<h1><%= t ('views_title.list'), :name => (t 'activerecord.models.book') %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to (t ('action.show'), :name => (t 'activerecord.models.book')), book %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to (t ('action.new'), :name => (t 'activerecord.models.book')), new_book_path %>
</nav>
