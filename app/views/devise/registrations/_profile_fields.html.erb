<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %><br />
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %><br />
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %><br />
  <%= f.text_area :self_introduction %>
</div>

<% if @user.image.attached? && @user.image.content_type.in?(%w[image/jpeg image/png image/gif]) %>
  <p>
    <%= image_tag @user.image.variant(resize_to_limit: [100, 100]) %>
  </p>
<% end %>

<div class="field">
  <%= f.label t('activestorage.image') %><br />
  <%= f.file_field :image %>
</div>
